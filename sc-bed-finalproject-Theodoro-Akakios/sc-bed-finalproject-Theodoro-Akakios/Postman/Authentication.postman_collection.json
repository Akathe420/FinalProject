					]
				}
			},
			"response": []
		},
		{
			"name": "Check Token",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "x-api-key",
						"value": "{{token}}",
						"type": "text"
					},
					{
						"key": "x-api-user",
						"value": "{{user}}",
						"type": "text"
