							"key": "email",
							"value": "final@testadmin.com",
							"type": "text"
						},
						{
							"key": "password",
							"value": "finaltest",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "http://localhost:8000/kahuna/api/login",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8000",
